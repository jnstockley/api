{
  "extends": [
    "config:recommended"
  ],
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": [
    "dev"
  ],
  "assignees": [
    "jnstockley"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "FROM jnstockley/poetry:(?<poetryVersion>[\\d\\.]+)-python(?<pythonVersion>[\\d\\.]+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "regex:^(?<poetryVersion>[\\d\\.]+)-python(?<pythonVersion>[\\d\\.]+)$",
      "extractVersionTemplate": "{{#if poetryVersion}}{{poetryVersion}}{{/if}}-python{{#if pythonVersion}}{{pythonVersion}}{{/if}}"
    }
  ]
}
