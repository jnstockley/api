{
  "extends": [
    "config:recommended"
  ],
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": [
    "dev"
  ],
  "assignees": [
    "jnstockley"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "FROM\\s+jnstockley/poetry:(?<currentValue>\\d+\\.\\d+\\.\\d+)-python\\d+\\.\\d+\\.\\d+"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver",
      "depNameTemplate": "jnstockley/poetry (poetry)"
    },
    {
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "FROM\\s+jnstockley/poetry:\\d+\\.\\d+\\.\\d+-python(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver",
      "depNameTemplate": "jnstockley/poetry (python)"
    }
  ]
}
